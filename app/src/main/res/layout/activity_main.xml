<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hd_bg"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="221dp"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="50dp"
        android:scaleType="fitCenter"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        app:srcCompat="@drawable/register2" />

    <EditText
        android:id="@+id/username"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:hint="Username"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FBFBFC"
        android:textColorHint="#F8F7F7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_below="@id/username"
        android:layout_alignStart="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FBFBFC"
        android:textColorHint="#F8F7F7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/c_password"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_below="@id/password"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_passwd"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FBFBFC"
        android:textColorHint="#F8F7F7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_below="@id/phone"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FBFBFC"
        android:textColorHint="#F8F7F7"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/password"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_below="@id/email"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_passwd"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#FBFBFC"
        android:textColorHint="#F8F7F7"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/c_password"
        android:layout_marginTop="40dp"
        android:backgroundTint="#035DA5"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#F7FAFB"
        android:textSize="32sp"
        android:textStyle="bold"
        app:cornerRadius="50dp" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/btnSignUp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#02467C"
        android:text="Existing User! Go to  Login"
        android:textAllCaps="false"
        android:textColor="#F7FAFB"
        android:textSize="25sp"
        android:textStyle="bold"
        app:cornerRadius="50dp" />


</RelativeLayout>